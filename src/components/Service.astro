---
import Button from './Button.astro';
const { icon, heading, checklist, price } = Astro.props;
---

<div class="service-card">
  <div class="icon-container">
    <img src={icon} alt={`${heading} icon`} />
  </div>
  <h3>{heading}</h3>
  <ul class="checklist">
    {checklist.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
  <div class="pricing">
    <p>Starting from {price}</p>
    <Button href="/pricing" text="See Pricing" type="primary" />

  </div>
</div>

<style>
  .service-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    max-width: 500px;
    border-radius: 8px;
    padding: 1.5rem;
    padding-bottom: 2rem;
    text-align: center;
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}


.icon-container {
  margin-bottom: 1rem;
}

.icon-container img {
  width: 50px;
  height: 50px;
}

.service-card h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.checklist {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: left;
  line-height: 1.5;
}

.checklist li {
  margin: 1rem 0;
  display: flex;
  align-items: center;
}

.checklist li::before {
  content: 'âœ”';
  color: #00cc55;
  margin-right: 1rem;
}

.pricing * {
  margin: 1rem 0;
  padding: 0;
}

.pricing p {
  font-family: 'Your Desired Font', sans-serif !important;
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: .5rem;
}

</style>