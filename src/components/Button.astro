---
const { type = 'primary', href, text, target } = Astro.props;

const buttonClass = type === 'primary' ? 'button-primary' : 'button-secondary';
---

<a href={href} target={target} class={buttonClass}>{text}</a>

<style>
/* Base Button Styles */
a.button-primary,
a.button-secondary {
  display: inline-block;
  padding: 0.75rem 1.3rem;
  font-size: 1rem;
  text-align: center;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
}

/* Primary Button Styles */
a.button-primary {
  background-color: var(--emphasis);
  color: white;
  border: none;
  cursor: pointer;
}

a.button-primary:hover {
  background-color: var(--emphasis-bright);
  cursor: pointer;
}

/* Secondary Button Styles */
a.button-secondary {
  background-color: #fff;
  color: var(--emphasis);
  border: 1px solid var(--emphasis);
}

a.button-secondary:hover {
  background-color: #e0e0e0;
}
</style>