---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const email = "mooseprintswebdesign@gmail.com";
const location = "Troy, NH";
const name = "Mooseprints Web Design";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="contact-section">
				<div class="contact-intro">
					<h2>Let's get in touch!</h2>
					<p>Interested but not quite ready to set up an initial consultation?</p>
					<p>Send me a message with any questions you have and I'll get back to you as soon as possible.</p>
				</div>
				<div class="direct-contact">
					<p>{name}</p>
					<p><a href={`mailto:${email}`}>{email}</a></p>
					<p><span class="location-icon">üìç</span> {location}</p>
				</div>
				<div class="contact-container">
          <!-- Contact Form -->
          <form id="contactForm" class="contact-form">
            <label for="name">Name<span class="required">*</span></label>
            <input type="text" id="name" name="from_name" required />
            
            <label for="email">Email<span class="required">*</span></label>
            <input type="email" id="email" name="from_email" required />
            
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" />
            
            <fieldset>
							<legend>Preferred contact method<span class="required">*</span></legend>
							<div>
								<input type="radio" id="contact-email" name="preferredContact" value="email" required />
								<label for="contact-email">Email</label>
							</div>
							<div>
								<input type="radio" id="contact-phone" name="preferredContact" value="phone" />
								<label for="contact-phone">Phone</label>
							</div>
						</fieldset>
            
            <label for="message">Message<span class="required">*</span></label>
            <textarea id="message" name="message" required></textarea>
            
            <button type="submit">Send</button>
            <p id="confirmationMessage" class="confirmation-message"></p>
          </form>
				</div>
      </section>
		</main>
		<Footer />
		<script src="https://cdn.emailjs.com/dist/email.min.js"></script>
	</body>
</html>


<style>
  .contact-section {
		max-width: 900px;
		margin: 0 auto;
    padding: 2rem;
  }

  .contact-intro {
    text-align: center;
    margin-bottom: 2rem;
  }

	.contact-intro p {
		margin: 0;
	}

	.direct-contact {
		display: flex;
		flex-direction: column;
		align-items: center;
    flex: 1;
  }

  .direct-contact p {
    margin: 0;
  }

  .contact-container {
    gap: 2rem;
    flex-wrap: wrap;
  }

  .contact-form {
    flex: 1;
		margin: 2rem auto;
		padding: 1.5rem;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
		background-color: #f9f9f9;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .required {
    color: red;
    margin-left: 0.2rem;
  }

	fieldset {
    border: none;
    padding: 0;
    margin: 1rem 0;
  }

  legend {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  fieldset div {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
  }

  fieldset input[type="radio"] {
    margin-right: 0.5rem;
  }

  fieldset label,
  .contact-form label {
    font-size: 20px;
    cursor: pointer;
    font-weight: bold;
  }

	.contact-form input[type="text"],
.contact-form input[type="email"],
.contact-form input[type="tel"],
.contact-form textarea {
  width: 100%;
  padding: 0.8rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  background-color: #f9f9f9;
  font-size: 1rem;
  font-family: inherit;
  color: #333;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
  transition: border-color 0.3s, box-shadow 0.3s;
}

.contact-form input[type="text"]:focus,
.contact-form input[type="email"]:focus,
.contact-form input[type="tel"]:focus,
.contact-form textarea:focus {
  outline: none;
  border-color: var(--accent, #007bff);
  box-shadow: 0 0 4px rgba(0, 123, 255, 0.5);
  background-color: #fff;
}

  .contact-form textarea {
	resize: vertical;
	min-height: 100px;
	padding: 0.75rem;
	border: 1px solid #ccc;
	border-radius: 4px;
	font-size: 1rem;
	font-family: inherit;
	color: #333;
	background-color: #fff;
	transition: border-color 0.2s ease, box-shadow 0.2s ease;
	}

.contact-form textarea:focus {
  border-color: var(--accent, #007acc);
  box-shadow: 0 0 4px rgba(0, 122, 204, 0.4);
  outline: none;
}

  .contact-form button {
    display: inline-block;
    padding: 0.75rem 1.3rem;
    font-size: 1rem;
    text-align: center;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    background-color: var(--emphasis);
    color: white;
    border: none;
    cursor: pointer;
  }

  .contact-form button:hover {
    background-color: var(--emphasis-bright);
    cursor: pointer;
  }

  .confirmation-message {
    color: green;
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .contact-container {
      flex-direction: column;
    }
  }
</style>

<!-- Load EmailJS -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>

<!-- Initialize EmailJS -->
<script type="text/javascript">
  (function() {
    emailjs.init('JFTGsRpjJd_1OlnIg');
  })();
</script>

<!-- Handle Form Submit -->
<script type="text/javascript">
  window.onload = function() {
    document.getElementById('contactForm').addEventListener('submit', function(event) {
      event.preventDefault();

      emailjs.sendForm('service_trxw4ip', 'template_ze1nf0c', this)  
        .then(function(response) {
          console.log('SUCCESS!', response);
          document.getElementById('confirmationMessage').textContent = 'Your message has been sent successfully! I will get back to you within 2 business days.';
          document.getElementById('contactForm').reset();
        }, function(error) {
          console.log('FAILED...', error);
          document.getElementById('confirmationMessage').textContent = 'Oops! Something went wrong, please try again later.';
        });
        
    });
  };
</script>